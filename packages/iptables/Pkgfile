name=iptables
version=1.4.21
release=1
source=(ftp://ftp.netfilter.org/pub/iptables/$name-$version.tar.bz2) 

build () {
  cd $name-$version
  ./configure \
    --prefix=/usr \
    --mandir=/usr/man \
    --libexecdir=/usr/lib \
    --enable-libipq \
    --disable-shared \
    --enable-static

  make

  make DESTDIR=$PKG install

  rm -rf $PKG/usr/{include,man}
  rm -rf $PKG/usr/lib/pkgconfig
}
